<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - e-Sklep</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <ul class="nav nav-pills mb-5">
                    <li class="nav-item">
                        <a class="navbar-brand col-3" asp-area="" asp-controller="Produkts" asp-action="Index">e-sklep</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="navbar-brand col-3" asp-area="" asp-controller="Zamowienies" asp-action="Index">Zamówienia</a>
                        </li>

                    }
                    @if (this.User.IsInRole("Sprzedawca") || this.User.IsInRole("Administrator"))
                    {
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Administarcja</a>
                            <div class="dropdown-menu">

                                <a class="dropdown-item" asp-area="" asp-controller="Klients" asp-action="Index">Klienci</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Produkts" asp-action="Index">Produkty</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Producents" asp-action="Index">Producenci</a>
                                <a class="dropdown-item" asp-area="" asp-controller="TypProduktus" asp-action="Index">Typy Produktow</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Producents" asp-action="Index">Producenci</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Magazyns" asp-action="Index">Magazyn</a>
                                </div>

                            </li>
                            }
                            else
                            {
                        <li class="nav-item">
                            <a class="navbar-brand col-3" asp-area="" asp-controller="Klients" asp-action="Create">Zarejestruj sie</a>
                        </li>
                        }
                        <li class="nav-item">
                            <div class="col-4">
                                <partial name="_LoginPartial" />
                            </div>
                        </li>
                    </ul>
            </div>
        </nav>
    </header>
    <div class="container col-12">
        <main role="main" class="coll-12">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - WebShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
