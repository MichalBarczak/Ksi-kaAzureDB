            <div class="form-group">
                <label asp-for="Upust" class="control-label"></label>
                @Html.DisplayFor(model => model.Upust)
                <span asp-validation-for="Upust" class="text-danger"></span>
            </div>
            <div class="form-group">
                Zamówienie Status
                Reserved
            </div>
            <div class="form-group">
                <label asp-for="AdresDostawy" class="control-label"></label>
                @Html.DisplayFor(model => model.AdresDostawy)
                <span asp-validation-for="AdresDostawy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
