            <div class="form-group">
                <label asp-for="Upust" class="control-label"></label>
                @Html.DisplayFor(model => model.Upust)
                <span asp-validation-for="Upust" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SposobDostawy" class="control-label"></label>
                <select asp-for="SposobDostawy" asp-items="Html.GetEnumSelectList<TypyDostawy>()" class="form-control"></select>
