@model Modele.Magazyn
@{
    ViewData["Title"] = "Utwórz";
}

<h1>Utwórz</h1>

<h4>Magazyn</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdProduktu" class="control-label"></label>
                <select asp-for="IdProduktu"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.ListOfProducts,"Id", "Wartość"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="IlośćProduktu" class="control-label"></label>
                <input asp-for="IlośćProduktu" class="form-control" />
                <span asp-validation-for="IlośćProduktu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
