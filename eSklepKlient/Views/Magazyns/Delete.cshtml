@model Modele.Magazyn

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>

<h3>Czy napewno chcesz usunąć ten magazyn ?</h3>
<div>
    <h4>Klient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produkt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produkt.ToString())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IlośćProduktu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IlośćProduktu)
        </dd>
     </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>
